<h2 class="header">Personal Details for the Passengers</h2>
<%= form_with model: @booking, local: true, class: "bg-gray-100 w-5/6 self-center rounded-full p-8" do |booking_form| %>
  <div>
    <%= booking_form.fields_for :passengers do |form| %>
      <div class="form-row">
        <div class="flex flex-col">
          <%= form.label :name, 'Name:', class: "label-text" %>
          <%= form.text_field :name, required: true %>
        </div>
    
        <div class="flex flex-col">
          <%= form.label :last_name, 'Last Name:', class: "label-text" %>
          <%= form.text_field :last_name, required: true %>
        </div>

        <div class="flex flex-col">
          <%= form.label :email, 'Email:', class: "label-text" %>
          <%= form.text_field :email, required: true %>
        </div>

        <div class="flex flex-col">
          <%= form.label :passport_num, 'Passport Number', class: "label-text" %>
          <%= form.text_field :passport_num, required: true %>
        </div>
      </div>
    <% end %>

    <%= booking_form.hidden_field :flight_id, value: params[:flight] %>
  </div>
  <div class="flex justify-center mt-4 w-48 mx-auto">
      <%= booking_form.submit 'Purchase Ticket', class: 'btn-main-grad' %>
  </div>
<% end %>

